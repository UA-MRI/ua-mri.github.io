---
layout: default
---
{% if page.hero_image %}
  <!-- Direct image option - 95% width fixed -->
  <div class="custom-hero-wrapper">
    {% assign hero_image_path = page.hero_image | prepend: 'assets/img/' %}
    {%
      include figure.liquid
      loading="eager"
      path=hero_image_path
      class="custom-hero-image"
      sizes="95vw"
      alt="University of Arizona"
    %}
  </div>

{% elsif page.hero_background %}
  <!-- Background image option with full width -->
  {% assign bg_position = page.hero_background_position | default: 'center 30%' %}
  {% assign overlay_opacity = page.hero_background_overlay | default: 0.4 %}

  <div
    class="about-hero"
    style="
      background-image: url('{{ page.hero_background | prepend: "assets/img/" | relative_url }}');
      background-size: cover;
      background-position: {{ bg_position }};
      background-attachment: fixed;
      position: relative;
      padding: 12rem 0;
      min-height: 500px;
      margin: -2rem calc(-50vw + 50%) 2rem calc(-50vw + 50%);
      width: 99vw;
    "
  >
    <div style="background: rgba(0, 0, 0, {{ overlay_opacity }}); position: absolute; top: 0; left: 0; right: 0; bottom: 0;"></div>
    <div class="container" style="position: relative; z-index: 1;">
      <header class="post-header" style="color: white; text-align: center;">
        {% if page.hero_logo %}
          <div style="margin-bottom: 2rem;">
            {% assign logo_path = page.hero_logo | prepend: 'assets/img/' %}
            <img src="{{ logo_path | relative_url }}" alt="Lab Logo" style="max-width: 300px; max-height: 200px; width: auto; height: auto;">
          </div>
        {% endif %}
        <h1
          class="post-title"
          style="color: white; text-shadow: 2px 2px 4px rgba(0,0,0,0.8); font-size: 3.2rem; line-height: 1.2;"
        >
          {% if site.title == 'blank' %}
            <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
            {{ site.last_name }}
          {% else %}
            {{ site.title }}
          {% endif %}
        </h1>

        <p
          class="desc"
          style="color: white; text-shadow: 2px 2px 4px rgba(0,0,0,0.8); font-weight: 500; font-size: 1.4rem; margin-top: 1rem;"
        >
          <style>
            .about-hero .desc a {
              text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
            }
          </style>
          {{ page.subtitle }}
        </p>
      </header>
    </div>
  </div>
{% endif %}

<div class="post">
  {% unless page.hero_background or page.hero_image %}
    <header class="post-header">
      <h1 class="post-title">
        {% if site.title == 'blank' %}
          <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
          {{ site.last_name }}
        {% else %}
          {{ site.title }}
        {% endif %}
      </h1>
      <p class="desc">{{ page.subtitle }}</p>
    </header>
  {% endunless %}

  <article>
    <div class="clearfix">{{ content }}</div>

    {% if page.announcements and page.announcements.enabled %}
      <h2><a href="{{ '/news/' | relative_url }}" style="color: inherit">news</a></h2>
      {% include news.liquid limit=true %}
    {% endif %}

    {% if page.latest_posts and page.latest_posts.enabled %}
      <h2><a href="{{ '/blog/' | relative_url }}" style="color: inherit">latest posts</a></h2>
      {% include latest_posts.liquid %}
    {% endif %}

    {% if page.selected_papers %}
      <h2><a href="{{ '/publications/' | relative_url }}" style="color: inherit">selected publications</a></h2>
      {% include selected_papers.liquid %}
    {% endif %}

    {% if page.social %}
      <div class="social">
        <div class="contact-icons">{% include social.liquid %}</div>
        <div class="contact-note">{{ site.contact_note }}</div>
      </div>
    {% endif %}

    {% if site.newsletter and site.newsletter.enabled and site.footer_fixed %}
      {% include newsletter.liquid center=true %}
    {% endif %}
  </article>

  <div class="container">
    <script
      type="text/javascript"
      id="clustrmaps"
      src="//cdn.clustrmaps.com/map_v2.js?cl=ffffff&w=300&t=tt&d=532LPr4msjE5_gKhjuHbfNSBwWx3o1JMGmeD-DCKly8&co=0b4975&ct=cdd4d9&cmo=97f449&cmn=00c134"
    ></script>
  </div>
</div>

<style>
  /.custom-hero-bg-wrapper {
    width: 90vw; /* 95% of screen width */
    margin: -2rem auto 2rem auto;
    overflow: hidden;
    border-radius: 12px;
    position: relative;
    left: 50%;
    right: 50%;
    transform: translateX(-50%); /* center the 95vw block */
  }

  /* Override al-folio default image sizing */
  .custom-hero-wrapper img.custom-hero-image {
    width: 100% !important;
    max-width: 100% !important;
    display: block;
    height: auto;
  }

  /* Mobile fixes */
  @media (max-width: 768px) {
    .custom-hero-wrapper {
      width: 100% !important;
    }

    /* Hero background mobile improvements */
    .about-hero {
      background-attachment: scroll !important;
      padding: 4rem 0 !important;
      min-height: 300px !important;
      margin: -1rem calc(-50vw + 50%) 1rem calc(-50vw + 50%) !important;
    }

    .about-hero .post-title {
      font-size: 2.5rem !important;
      line-height: 1.3 !important;
      padding: 0 1rem;
    }

    .about-hero .desc {
      font-size: 1.2rem !important;
      padding: 0 1rem;
      margin-top: 0.5rem !important;
    }

    .about-hero .post-header {
      padding: 0 0.5rem;
    }
  }

  /* Small mobile devices */
  @media (max-width: 480px) {
    .about-hero {
      padding: 3rem 0 !important;
      min-height: 250px !important;
    }

    .about-hero .post-title {
      font-size: 2rem !important;
    }

    .about-hero .desc {
      font-size: 1.1rem !important;
    }
  }
</style>
